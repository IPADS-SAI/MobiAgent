<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingTop="4dp"
    android:paddingEnd="12dp"
    android:paddingBottom="4dp">

    <!-- Bot 消息气泡 (左侧) -->
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:background="@drawable/bg_bot_bubble"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 思维链区域（可折叠） -->
        <LinearLayout
            android:id="@+id/reasoning_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- 思维链标题栏（可点击展开/折叠） -->
            <LinearLayout
                android:id="@+id/reasoning_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/reasoning_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已深度思考"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reasoning_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="▼"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 思维链内容区域（带圆点和分割线） -->
            <RelativeLayout
                android:id="@+id/reasoning_content_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <!-- 思维链文本内容 -->
                <TextView
                    android:id="@+id/reasoning_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/bg_reasoning_content"
                    android:lineSpacingExtra="6dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/text_secondary"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <!-- 左侧圆点 -->
                <View
                    android:id="@+id/reasoning_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignTop="@id/reasoning_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_reasoning_dot" />

                <!-- 左侧分割线 -->
                <View
                    android:id="@+id/reasoning_line"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_below="@id/reasoning_dot"
                    android:layout_alignBottom="@id/reasoning_content"
                    android:layout_alignLeft="@id/reasoning_dot"
                    android:layout_marginStart="3.5dp"
                    android:layout_marginTop="4dp"
                    android:background="#D0D0D0" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 执行动作区域 -->
        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/action_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_primary"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 简单消息文本（用于非结构化消息） -->
        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/text_primary"
            android:textIsSelectable="true"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- User 消息气泡 (右侧) -->
    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:background="@drawable/bg_user_bubble"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/text_on_primary"
            android:textIsSelectable="true"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
